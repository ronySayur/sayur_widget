{
	"version": "2.0.0",
	"tasks": [
		//flutter clean; flutter pub get; flutter publish
		{
			"label": "Publish",
			"type": "shell",
			"command": "flutter clean; flutter pub get; flutter pub publish",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		//flutter dart fix --apply
		{
			"label": "Fix Dart",
			"type": "shell",
			"command": "dart fix --apply",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Clean Get",
			"type": "shell",
			"command": "flutter clean; flutter pub get;",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}
